extends ../layouts/base

block metas
  meta(name="Author" content="百家渡")
  meta(name="keywords" content="百家渡,百家花圃,百家论坛,多肉,多肉论坛")
  meta(name="Description" content="百家渡")
  meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")

block title
  title 百家渡

block stylesheets
  link(rel="stylesheet" type="text/css" href="/forum/css/ionic.min.css")
  link(rel="stylesheet" type="text/css" href="/forum/css/style.css")

block scripts
  script(type="text/javascript" src="/forum/js/libs/ionic/1.0.0/ionic.min.js")
  script(type="text/javascript" src="/forum/js/dist/bundles/index.js")

  script(type="text/javascript" src="/forum/js/libs/jquery.fileupload/5.42.3/vendor/jquery.ui.widget.js")
  script(type="text/javascript" src="/forum/js/libs/jquery.fileupload/5.42.3/jquery.iframe-transport.js")
  script(type="text/javascript" src="/forum/js/libs/jquery.fileupload/5.42.3/jquery.fileupload.js")

block main
  include ../includes/footer-bav
  #user-info-data(data-value="#{userInfo ? JSON.stringify(userInfo) : ''}")
  #mask-bg(style="display: none;")
  #new-comment
    .title 回复
    .wrapper
      textarea.comment-content(placeholder="输入内容（5~500）" minlength="5" maxlength="500")
    .save-btn 确定
  .main-bg
    .content-wrapper
      #jishujiaoliu.tab(data-cat="jsjl" data-order-by="id" data-order-name="latest")
        .tab-header
          .tab-title.jsjl 技术交流
          ul.tab-sort
            li.latest.active 最新
            li.hotest 点击量
            li.livest 活跃度
          .tab-edit
        .for-tap
        .tab-content
          .top-posts.posts
          .other-posts.posts
      #zongheluntan.tab.active(data-cat="zhlt" data-order-by="id" data-order-name="latest")
        .tab-header
          .tab-title.zhlt 综合论坛
          ul.tab-sort
            li.latest.active 最新
            li.hotest 点击量
            li.livest 活跃度
          .tab-edit
        .for-tap
        .tab-content
          .top-posts.posts
          .other-posts.posts